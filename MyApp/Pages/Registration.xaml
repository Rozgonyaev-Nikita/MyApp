<Page x:Class="MyApp.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Height="200" Width="500" HorizontalAlignment="Center" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="karp" x:Name="Login"/>
        <PasswordBox Grid.Row="1" x:Name="Password"/>
        <PasswordBox Grid.Row="2"  x:Name="Password2"/>
        <Button Grid.Row="3" Content="Зарегистрироваться" Click="Resistr" />
        <Button Grid.Row="4" Content="Войти" Background="Transparent" Width="100" Height="20" HorizontalAlignment="Center" BorderThickness="0" Click="Button_Click"/>
    </Grid>
</Page>
